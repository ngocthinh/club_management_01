<div id="page-content" class="block">
  <div class="block full">
    <div class="block-title">
      <h2><strong><%= t "clubs_of" %><%= @organization.name %></strong></h2>
    </div>
    <div class="table-responsive">
      <table id="example-datatable"
        class="table table-vcenter table-condensed table-bordered">
        <thead>
          <tr>
            <th class="text-center"><%= t "id" %></th>
            <th class="text-center"><i class="gi gi-user"></i></th>
            <th><%= t "name_club" %></th>
            <th><%= t "notification" %></th>
            <th><%= t "description" %></th>
            <th class="text-center"><%= t "view_member" %></th>
          </tr>
        </thead>
        <tbody>
          <% @clubs.each do |club| %>
            <tr>
              <td class="text-center"><%= club.id %></td>
              <td class="text-center"><%= image_tag club.logo,
                class: "circle-profile-list" %></td>
              <td><%= club.name %></a></td>
              <td><%= club.notification %></td>
              <td><%= club.content_club.truncate(Settings.event_truncate).html_safe %></td>
              <td class="text-center">
                <%= link_to t("view"), manager_club_path(club.id),
                  class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
