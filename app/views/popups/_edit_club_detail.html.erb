<%= javascript_include_tag "bootstrap-tagsinput.js",
  "data-turbolinks-track" => true %>
<div class="col-md-3"></div>
<div class="col-md-6">
  <div class="modal-dialog edit-club">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title"><i class="fa fa-pencil"></i> <%= t "edit" %></h2>
      </div>
      <div class="modal-body">
        <%= form_for [:club_manager, @club],
          html: {multipart: true, enctype: "multipart/form-data",
          class: "form-horizontal form-bordered"} do |f| %>
          <fieldset>
            <legend><strong><%= @club.name %><%= t "information" %></strong></legend>
            <div class="form-group">
              <label class="col-md-3 control-label"><%= t "name" %></label>
              <div class="col-md-8">
                <%= f.text_field :name, value: @club.name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label">
                <%= t "enter_tags" %></br>
              </label>
              <div class="col-md-8">
                <%= f.text_field(:tag_list, value: @club.tag_list.join(","),
                  "data-role": "tagsinput", class: "form-control")%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"><%= t "description" %></label>
              <div class="col-md-8">
                <%= f.cktext_area :content, value: @club.content.html_safe,
                  class: "form-control", rows: Settings.edit_description %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"><%= t "logo" %></label>
              <div class="col-md-8">
                <%= f.file_field :logo %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"><%= t "background" %></label>
              <div class="col-md-8">
                <%= f.file_field :image %>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <legend><strong><%= t "notification" %></strong></legend>
            <div class="form-group">
              <label class="col-md-3 control-label" for="user-settings-password">
                <%= t "notification" %>
              </label>
              <% for day in I18n.t('date.day_names') %>
                  <%= check_box_tag 'club[time_activity][]',
                    day, check_date(@club.time_activity, day) %>
                  <label><%= day %></label>
                <% end %>
            </div>
            <div class="col-md-12">
              <label for="contact-message"><%= t "goal_club" %>
                <span class="text-danger">*</span>
              </label>
              <%= f.text_area :goal, placeholder: t("goal_club"),
                class: "form-control input-lg", id: "contact-message", row: 10  %>
            </div>
          </fieldset>
          <div class="form-group form-actions">
            <div class="col-xs-12 text-right">
              <%= f.button t("close"), class: "btn btn-sm btn-warning",
                "data-dismiss": "modal" %>
              <%= f.button t("save"), class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="col-md-3"></div>
